<html>
<!-- HEAD -->

<head>
    <%- include(".././partials/headLoginRegister.ejs") %>
</head>

<body>
    <!-- HEADER -->
    <header>
        <%- include(".././partials/header.ejs") %>
            </form>

            </div>
            </nav>

    </header>

    <!-- MAIN -->
    <main>
        <div class="padre-imagen">
            <div class="seccion-imagen">
                <img src="https://abisulkes.alwaysdata.net/banner-registro.jpg" alt="Imagen-registro">
            </div>

            <div class="seccion-login">

                <h2 class="titulo1">Registrate</h2>

                <div>
                    <form action="/usuarios/register" method="POST" enctype="multipart/form-data" class="campo-negro">

                        <div class="campo">
                            <input type="file" id="imagen" placeholder="imagen" name="imagen" class="form-control relleno2"
                                ></input>
                                
                                <% if(locals.errors && errors.imagen){%>
                                    <div class="text-danger">
                                        <%= errors.imagen.msg%>
                                    </div>
                                    <%}%>

                            <input type="text" name="email" id="email" 
                            placeholder="email" 
                            class="form-control relleno <%= locals.errors && errors.email ? 'is-invalid' : null %>"
                            value="<%= locals.oldData ? oldData.email : null %>"
                                ></input>

                                <% if (locals.errors && errors.email) {%>
									<div class="text-danger">
										<%= errors.email.msg %> 
									</div>
								<%}%>

                                    <input type="password" name="password" placeholder="contraseña" class="form-control relleno <%= locals.errors && errors.password ? 'is-invalid' : null %>"
                                    value="<%= locals.oldData ? oldData.password : null %>"
                                        />

                                        <% if(locals.errors && errors.password){%>
                                            <div class="text-danger">
                                                <%= errors.password.msg%>
                                            </div>
                                            <%}%>

                                    <input type="password" name="passwordD" placeholder="confirmar contraseña"
                                        class="form-control relleno <%= locals.errors && errors.passwordD ? 'is-invalid' : null %>"
                                        value="<%= locals.oldData ? oldData.passwordD : null %>" />

                                        <% if(locals.errors && errors.passwordD){%>
                                            <div class="text-danger">
                                                <%= errors.passwordD.msg%>
                                            </div>
                                            <%}%>

                                    <input type="text" name="nombreUsuario" id="nombreUsuario"
                                        placeholder="nombre usuario" class="form-control relleno <%= locals.errors && errors.nombreUsuario ? 'is-invalid' : null %>"
                                        value="<%= locals.oldData ? oldData.nombreUsuario : null %>" ></input>

                                        <% if (locals.errors && errors.nombreUsuario){%>
                                            <div class="text-danger">
                                                <%= errors.nombreUsuario.msg%>
                                            </div>
                                            <%}%>

                                    <div class="legales">
                                        <label for="terminos">Estoy de acuerdo con las bases y
                                            condiciones</label>
                                        <input type="checkbox" id="terminos" name="terminos" required />
                                    </div>



                        </div>

                </div>
                <div>
                    <div class="campo">

                   
                       <button class="boton" type="submit">registrarse</button>

                        <div class="centrado">
                            <h5 class="separar-h5">Registrate con</h5>

                            <div class="fila-botones">
                                <a href="./"><button type="button" value="Continuar con Facebook" class="boton2"><i
                                            class="fi fi-brands-facebook"></i> Continuar
                                        con
                                        Facebook</button></a>
                                <a href="./"><button type="button" value="Continuar con Facebook"
                                        class="boton2 google"><i class="fi fi-brands-google"></i>Continuar con
                                        Google</button></a>
                            </div>
                        </div>

                        </form>
                    </div>
                </div>
    </main>

    <!-- FOOTER -->
    <%- include(".././partials/footer.ejs") %>
</body>

</html>